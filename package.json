{
  "name": "veo3-angel",
  "version": "1.6.0",
  "description": "VEO3 Video Generation Assistant - Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"npm run electron-dev\"",
    "server": "node src/server/server.js",
    "electron-dev": "wait-on http://localhost:3000 && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.veo3angel.app",
    "productName": "VEO3-Angel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "!node_modules/{.cache,@types,typescript,eslint*,prettier*,jest*,mocha*,chai*,nyc*,coverage*,*.md}"
    ],
    "compression": "maximum",
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "publisherName": "VEO3-Angel Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VEO3-Angel"
    }
  },
  "keywords": [
    "veo3",
    "video",
    "generation",
    "ai",
    "prompt",
    "assistant"
  ],
  "author": "VEO3-Angel Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  }
}
